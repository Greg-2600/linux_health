# Auto detect text files and normalize line endings to LF
* text=auto

# Python files
*.py text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Markdown files
*.md text eol=lf

# JSON files
*.json text eol=lf

# Dockerfile
Dockerfile text eol=lf
.dockerignore text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.zip binary
*.gz binary
*.tar binary
*.so binary
*.o binary
